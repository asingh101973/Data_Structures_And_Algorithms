class GFG {

    static boolean isPerfect(int n)
    {
        // 1 is not a perfect number
        if (n == 1)
            return false;

        int sum = 1;

        for (int i = 2; i < n; i++) {
 
            if (n % i == 0) {
                sum += i;
            }
        }
        if (sum == n)
            return true;
 
        return false;
    }
    public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		System.out.print("Enter a Number: ");
		long N = sc.nextLong();
		
		System.out.println("Result is " +  isPerfect(N));

	}

}
 
